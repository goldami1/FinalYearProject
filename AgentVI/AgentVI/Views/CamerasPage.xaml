<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="AgentVI.Views.CamerasPage">
        <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness"
                    iOS="0,30,0,0">
        </OnPlatform>
    </ContentPage.Padding>
    <ContentPage.Content>
        <ListView x:Name="cameraListView" RowHeight="200" ItemTapped="OnTap" IsPullToRefreshEnabled="true" Refreshing="OnRefresh">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Margin="20" BackgroundColor= "{Binding CamColorStatus}">
                            <Label Text= "{Binding CamName}" TextColor="Navy" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center" />
                            <Image Source="{Binding CamImage}" />
                            <Label Text = "{Binding CamStatus}" TextColor="Navy" HorizontalOptions="Center" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>