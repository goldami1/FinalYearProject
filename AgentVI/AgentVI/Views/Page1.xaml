<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AgentVI.Views.Page1"
             xmlns:vidplayer="clr-namespace:Octane.Xamarin.Forms.VideoPlayer;assembly=Octane.Xamarin.Forms.VideoPlayer">

    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness"
                    iOS="0,30,0,0">
        </OnPlatform>
    </ContentPage.Padding>
    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
        <!--
        <vidplayer:VideoPlayer x:Name="vidPlayer" Source="https://vjs.zencdn.net/v/oceans.mp4" AutoPlay="True" />
        -->
        <StackLayout Orientation="Horizontal">
            <Label Text="Username: "/>
            <Label Text="{Binding Username}"/>
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <Label Text="User Email: "/>
            <Label Text="{Binding UserEmail}"/>
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <Label Text="Accesstoken: "/>
            <Label Text="{Binding AccessToken}"/>
        </StackLayout>
    </StackLayout>
    
</ContentPage>