<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AgentVI.Views.FilterPageTemplate">
    <StackLayout>
        <SearchBar Placeholder="Search..." HeightRequest="30" x:Name="filterSearchBar"/>
        <!--<BoxView Color="{Binding Color}" WidthRequest="200" HeightRequest="200" HorizontalOptions="Center" VerticalOptions="CenterAndExpand"/>-->
        <ListView ItemsSource="{Binding AccountFolders}" BackgroundColor="Transparent" SeparatorColor="Transparent">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>