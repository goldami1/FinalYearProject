<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="AgentVI.Views.EventsPage">
        <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness"
                    iOS="0,30,0,0">
        </OnPlatform>
    </ContentPage.Padding>
    <ContentPage.Content>
        <ListView x:Name="eventListView" RowHeight="300" IsPullToRefreshEnabled="true" Refreshing="OnRefresh">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Margin="20">
                            <Image Source="{Binding CamImage, Mode=TwoWay}" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"/>
                            <Label Text= "{Binding CamName, Mode=TwoWay}" TextColor="Navy" HorizontalOptions="Start" >
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="cameraButton_Clicked"/>
                                </Label.GestureRecognizers>
                            </Label>
                            <StackLayout Orientation="Horizontal">
                                <Label Text="{Binding RuleName, Mode=TwoWay}" HorizontalOptions="Start" VerticalOptions="Center"  />
                                <Label Text = "{Binding DateTime, Mode=TwoWay}" TextColor="Navy" HorizontalOptions="EndAndExpand" VerticalOptions="Center"/>
                            </StackLayout>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>
